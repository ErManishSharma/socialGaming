<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SigninActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/et_username_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User name"
            android:layout_marginTop="250dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            style="@style/Base.CardView"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_passwrd_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:layout_below="@+id/et_username_signin"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            style="@style/Base.CardView"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_passwrd_signin"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:text="Sign In"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/create_acc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_btn"
            android:text="Create an account"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</ScrollView>